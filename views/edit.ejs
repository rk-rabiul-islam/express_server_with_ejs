


    <div class="container my-5">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header">
                <h1>Update profile information</h1>
              </div>
              <div class="card-body">

                <div class="row">
                    <div class="col-md-8 Sing_data_info">
                      <form action="/student/edit/<%= edit_student_data._id %>" method="POST" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="name">Name</label>
                            <input value="<%= edit_student_data.name %>" class="form-control" type="text" id="name" name="name">
                        </div>
                        <div class="my-3">
                            <leabel for="email">Email</leabel>
                            <input value="<%= edit_student_data.email %>" class="form-control" type="text" id="email" name="email">
                        </div>
                        <div class="my-3">
                            <label for="phone">Phone</label>
                            <input value="<%= edit_student_data.phone %>" class="form-control" type="text" id="phone" name="phone">
                        </div>
                        <div class="my-3">
                          <input  name="old_photo" type="hidden" value="<%= edit_student_data.photo %>">
                            <label for="Photo">Photo</label>
                            <input class="form-control" type="file" id="Photo" name="photo">
                        </div>
                        <div class="my-3">
                            <input class="btn btn-primary" value="Update Data" type="submit">
                        </div>
                    </form>  
                    </div>
                    <div class="col-md-4">
                        <img style="width: 100%; vertical-align: middle; height: 100%; object-fit: contain;" src="/assets//upload/<%= edit_student_data.photo %> " alt="">
                    </div>
                </div>

              </div>
              <div class="card-footer text-right">
                <a href="/student" class="btn btn-primary">Back Home</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
  